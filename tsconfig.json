{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      //      "@/*": [
      //        "./*"
      //      ]
      //      "@/components/*": [
      //        "app/components/*"
      //      ],
      "@/components/product/*": [
        "components/product/*"
      ],
      "@/components/category/*": [
        "components/category/*"
      ],
      "@/components/ui/*": [
        "components/ui/*"
      ],
      "@/lib/data/*": [
        "lib/data/*"
      ],
      "@/lib/utils": [
        "lib/utils"
      ],
      "@/lib/types": [
        "lib/types"
      ],
      "@/lib/routes": [
        "lib/routes"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}